{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.heimgewebe.org/contracts/policy.weight_adjustment.schema.json",
  "title": "Policy Weight Adjustment Proposal",
  "description": "Proposed weight adjustments based on decision feedback analysis",
  "x-producers": ["heimlern"],
  "x-consumers": ["hausKI"],
  "type": "object",
  "required": ["version", "basis_policy", "ts", "deltas", "confidence", "evidence"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Version of the adjustment proposal format"
    },
    "basis_policy": {
      "type": "string",
      "description": "Identifier of the base policy being adjusted"
    },
    "ts": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp when the proposal was generated"
    },
    "deltas": {
      "type": "object",
      "description": "Proposed weight adjustments as key-value pairs",
      "additionalProperties": {
        "oneOf": [
          { "type": "number" },
          { "type": "string" }
        ]
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Confidence in the proposed adjustments (0.0 to 1.0)"
    },
    "evidence": {
      "type": "object",
      "required": ["decisions_analyzed"],
      "properties": {
        "decisions_analyzed": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of decisions analyzed to generate this proposal"
        },
        "failure_rate_before": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Failure rate with current weights"
        },
        "failure_rate_after_sim": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Simulated failure rate with proposed weights"
        },
        "simulation_method": {
          "type": "string",
          "description": "Method used for simulation (e.g., 'placeholder_constant', 'replay', 'monte_carlo')"
        },
        "patterns": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Identified patterns that led to this proposal"
        }
      },
      "additionalProperties": true
    },
    "reasoning": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Human-readable explanations for the proposed adjustments"
    },
    "status": {
      "type": "string",
      "enum": ["proposed", "accepted", "rejected", "superseded"],
      "default": "proposed",
      "description": "Current status of this proposal"
    }
  },
  "additionalProperties": false
}
